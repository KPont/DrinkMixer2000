<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/textView" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Text To Send"
        android:layout_above="@+id/btn1"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Send"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="DET KOMMER HER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2" />

    <Button
        android:id="@+id/btnGyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSensor"
        android:text="Pour"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnJuice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juice"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2"
        android:onClick="onClickJuice" />

    <Button
        android:id="@+id/btnVodka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vodka"
        android:layout_alignTop="@+id/btnJuice"
        android:layout_centerHorizontal="true"
        android:onClick="onClickVodka" />

    <Button
        android:id="@+id/btnCola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cola"
        android:layout_alignTop="@+id/btnVodka"
        android:layout_alignLeft="@+id/btnGyro"
        android:layout_alignStart="@+id/btnGyro"
        android:onClick="onClickCola" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingChoosen"
        android:layout_above="@+id/btnJuice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Data Sendt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Datatext"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

</RelativeLayout>
